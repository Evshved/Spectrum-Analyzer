    <Style TargetType="Button" x:Key="TextualButton">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    <Style BasedOn="{StaticResource TextualButton}" TargetType="Button" x:Key="HorizontalTextButton">
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="Padding" Value="4" />
    </Style>
    <Style TargetType="Button" x:Key="VerticalButton">
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>
    <Style TargetType="Separator" x:Key="HorizontalSeparator">
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>
    <Style TargetType="ContentControl" x:Key="VerticalIconButton">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="Label" x:Key="WorkspaceLabel">
        <!--Empty-->
    </Style>
    <Style TargetType="ListBox" x:Key="FilesListbox">
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MaxWidth" Value="180" />
        <Setter Property="MaxHeight" Value="760" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
    </Style>
    <Style TargetType="ListBox" x:Key="SearchListbox">
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
    </Style>
    <Style TargetType="ListView" x:Key="TransitionsListView">
        <Setter Property="MinHeight" Value="100" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
    </Style>
    <helpers:WindowSizeConverter x:Key="WindowSizeConverter" />
</ResourceDictionary>