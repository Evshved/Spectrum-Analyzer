<Window x:Class="SpectrumAnalyzer.Views.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewmodels="clr-namespace:SpectrumAnalyzer.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectrumAnalyzer.Views"
        mc:Ignorable="d"
        Title="Database" Height="450" Width="800"
        DataContext="{DynamicResource ViewModel}">
    <Window.Resources>
        <viewmodels:DatabaseWindowViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" AutoGenerateColumns="True" SelectionMode="Single" SelectionUnit="FullRow" ItemsSource="{Binding Spectrums}" />
    </Grid>
</Window>
